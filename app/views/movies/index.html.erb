<div class="center">

  <% if @movies.count == 0 %>
    <div class="row" style="background-color:silver; margin-top:80px">

      <div class="col-md-6">
        <%= image_tag "whatnext.png", :style => "height: 100%; width: 100%" %>
      </div>

      <div class="col-md-6">
        <div class="inside">
          <h1>Friends don't let friends watch bad movies.</h1>
          <h2>Add a movie to your list now.</h2>
          <%= form_tag("/index", method: "get", class: "navbar-form") do %>
            <%= text_field_tag(:q, nil, placeholder: "search by movie title", class: "form-control") %>
            <%= submit_tag("Search", class: "btn btn-default") %>
          <% end %>
        </div>
      </div>

    </div>

    <div style="background-color: lightgreen; margin-top:50px">
      <h1>Browse our users' collections</h1>
      <% @users.each do |user| %>
      <a href='/collections/<%= user.id %>'>
        <li><%= user.name %></li>
      </a>
      <% end %>
    </div>

    <div style="background-color: lightcyan; margin-top:50px">
      <h1>Movies in our users' collections...</h1>
      <% @collections.each do |collection| %>
        <a href='/show?q=<%= collection.movie_id %>'>
          <img class="movie-img" src="<%= collection.movie_poster %>" alt="<%= collection.movie_title %>" />
        </a>
      <% end %>
    </div>


  <% else %>
    <% @movies.each do |movie| %>
      <a href='/show?q=<%= movie["imdbID"] %>'>
        <img class="movie-img" src="<%= movie["Poster"] %>" alt="<%= movie["Title"] %>" />
      </a>
    <% end %>
  <% end %>

</div>
